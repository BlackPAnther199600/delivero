{
    "info": {
        "_postman_id": "delivero-registration-test",
        "name": "Delivero - Auth Tests",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Register - Create test user",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"Password123!\",\n  \"name\": \"Postman Test\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/auth/register",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "register"
                    ]
                }
            },
            "response": [],
            "event": [
                {
                    "listen": "prerequest",
                    "script": {
                        "exec": [
                            "// Generate a unique test email for each run",
                            "const now = Date.now();",
                            "pm.environment.set('test_email', `postman+${now}@example.com`);"
                        ]
                    }
                },
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 201', function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "const jsonData = pm.response.json();",
                            "pm.test('Response has token', function () {",
                            "    pm.expect(jsonData).to.have.property('token');",
                            "});",
                            "pm.test('Response user email matches request', function () {",
                            "    pm.expect(jsonData.user).to.have.property('email', pm.environment.get('test_email'));",
                            "});",
                            "// Save token to environment for follow-up requests",
                            "if (jsonData.token) {",
                            "    pm.environment.set('auth_token', jsonData.token);",
                            "}"
                        ]
                    }
                }
            ]
        }
    ]
}